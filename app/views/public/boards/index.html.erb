<div class="page-header">
  <h1>スレッド一覧</h1>
</div>
<div>
  <%= form_tag public_boards_path, method: :get do %>
    <div class="form-group">
        <%= text_field_tag :q, @q, class: 'form-control', placeholder: "スレッド・スレッド内テキスト" %>
    </div>
    <div class="form-group">
        <%= submit_tag "検索", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
<div><br><br><br>
  <%= link_to "スレッド作成", new_public_board_path %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>スレッド名</th>
      <th>作成日時</th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.id %></td>
        <td>
          <%= link_to board.title, public_board_responses_path(board) %>
        </td>
        <td><%= board.format_created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= paginate @boards %>
</div>


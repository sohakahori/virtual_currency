<div class="page-header">
  <h1>取引所一覧</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>取引所名</th>
      <th>住所</th>
      <th>会社名</th>
      <th>取り扱いコイン</th>
      <th>詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.address %></td>
        <td><%= shop.company %></td>
        <td>
          <% shop.coins.each do |coin| %>
            <%= coin.name %><br>
          <% end %>
        </td>
        <td><%= link_to "詳細", public_shop_path(shop), id: "shop_#{shop.id}", class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= paginate @shops, class: "page-link" %>
</div>


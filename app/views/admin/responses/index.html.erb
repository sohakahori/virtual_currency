<div class="page-header">
  <h1>コメント一覧</h1>
  <h2><%= @board.title %></h2>
</div>
<div>
  <%= form_tag admin_board_responses_path(@board), method: :get do %>
    <div class="form-group">
        <%= text_field_tag "q[response]", @q[:response], :class => 'form-control', placeholder: "Response.id・Response.body" %>
    </div>

    <div class="form-group">
      <%= text_field_tag "q[user]", @q[:user], :class => 'form-control', placeholder: "User.id・User.full_name" %>
    </div>

    <div class="form-group">
        <%= submit_tag "検索", :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>
<br><br><br>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>コメント</th>
      <th>投稿者</th>
      <th>作成日時</th>
      <th>詳細</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @responses.each do |response| %>
      <tr>
        <td><%= response.id %></td>
        <td><%= simple_format(response.body) %></td>
        <td><%= response.user.full_name %></td>
        <td><%= response.format_created_at %></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= paginate @responses %>
</div>

<div class="page-header">
  <h1>管理者管理</h1>
  <%= form_tag admin_admins_path, method: :get do %>
    <div class="form-group">
      <div class="col-lg-10">
        <%= text_field_tag :q, @q, class: 'form-control', placeholder: "苗字・名前・苗字 名前・メールアドレス" %>
      </div>
    </div>
    <%= submit_tag "検索", class: 'btn btn-primary' %>
  <% end %>
  <br><br><br>
  <div>
    <%= link_to "新規作成", new_admin_admin_path %>
  </div>

</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>苗字</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th>詳細</th>

    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.id %></td>
        <td><%= admin.last_name %></td>
        <td><%= admin.first_name %></td>
        <td><%= admin.email %></td>
        <td><%= admin.created_at.strftime("%Y年%m月%d日 %H:%M:%S") %></td>
        <td><%= admin.updated_at.strftime("%Y年%m月%d日 %H:%M:%S") %></td>
        <td><%= link_to "詳細", admin_admin_path(admin), class: "btn btn-info", id: "admin_#{admin.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <div>
    <%= paginate @admins, class: "page-link" %>
  </div>
</div>


<div class="page-header">
  <h1>ユーザー一覧</h1>
  <%= form_tag admin_users_path, method: :get do %>
    <div class="form-group">
      <div class="col-lg-10">
        <%= text_field_tag :q, @q, class: 'form-control', placeholder: "苗字・名前・苗字 名前・ニックネーム・メールアドレス" %>
      </div>
    </div>
    <%= submit_tag "検索", class: 'btn btn-primary' %>
  <% end %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>苗字</th>
      <th>名前</th>
      <th>ニックネーム</th>
      <th>メールアドレス</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.last_name %></td>
        <td><%= user.first_name %></td>
        <td><%= user.nickname %></td>
        <td><%= user.email %></td>
        <td><%= user.format_created_at %></td>
        <td><%= user.format_updated_at %></td>
        <td><%= link_to "削除", admin_user_path(user), class: "btn btn-danger", id: "user_#{user.id}", method: :delete, data: {confirm: "削除してよろしいでしょうか？"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= paginate @users, class: "page-link" %>
</div>

